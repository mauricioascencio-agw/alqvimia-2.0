{
  "name": "@alqvimia/developer-hub",
  "version": "2.0.0",
  "description": "Alqvimia Developer Hub - IDE, Testing & Deployment Tools",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "start:dev": "cross-env NODE_ENV=development npm start",
    "start:qa": "cross-env NODE_ENV=qa npm start",
    "start:prod": "cross-env NODE_ENV=production npm start",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}
